<% include ../partials/header %>


<div class="container">
    
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new"> Add New Campground</a>
        </p>
    </header>
    
    
    <div class="row text-center">
        <%for(var i=0;i<campgrounds.length;i++){%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=campgrounds[i].image%>" style="height:180px;">
                    <div class="caption">
                        <h4><%=campgrounds[i].name%></h4>
                    </div>
                    <a id="buttonMoreInfo" href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
                </div>
                
            </div>
        <%}%>
    </div>

</div>

<% include ../partials/footer %>